{
  "name": "@borderlessjs/borderless",
  "version": "0.0.3-dev",
  "description": "Framework for transparently running code anywhere",
  "main": "index.js",
  "scripts": {
    "start": "cd dist_mockup/main-site/; node server/server.js",
    "clean": "rm -rf example/inst/ example/dist/",
    "test:instrument": "node cli.js instrument --src example/src/ --inst example/inst/",
    "test:pack": "node cli.js pack --inst example/inst/ --dist example/dist/ --topology example/topology.js",
    "dev:npm-publish": "npm publish --access public",
    "dev:link-local": "npm link @borderlessjs/env-html @borderlessjs/env-node @borderlessjs/env-main-thread",
    "diagrams": "cd docs/diagrams; dot -Tsvg -O *.gv; mv *.svg images/",
    "npm-publish": "npm publish --access public"
  },
  "bin": {
    "borderless": "./cli.js"
  },
  "author": "Sergey Chernyshev",
  "type": "module",
  "repository": {
    "url": "https://github.com/BorderlessFramework/borderless",
    "type": "git"
  },
  "dependencies": {
    "@babel/core": "^7.18.9",
    "@babel/traverse": "^7.18.9",
    "@borderlessjs/babel-plugin": "^0.0.1",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "yargs": "^17.5.1"
  }
}
